						div.progressBar
							h3.is-5 MEAN
							div.progressBarContainer
								div.progressBarValue.value-50
							p
								small 50%
	section.hero.portfolio-section.is-fullheight.layout-box.has-ribbon-left
		div.ribbon 
			span.is-medium
				i.fa.fa-picture-o
		.hero-body
			div.container
				h1.title.is-2 #[span]ortfolio
				div.tile.is-ancestor
					div.tile.is-12.is-vertical
						div.tile
							div.tile.is-parent.is-vertical
								article.tile.is-child.port.layout-box
									img(src=(projects[0] != undefined ? '/images/portfolio/uploads/' + projects[0] : '/images/portfolio/comingsoon.png'))
								article.tile.is-child.port.layout-box
									img(src=(projects[1] != undefined ? '/images/portfolio/uploads/' + projects[1] : '/images/portfolio/comingsoon.png'))
							div.tile.is-parent
								article.tile.is-child.port.layout-box
									img(src=(projects[2] != undefined ? '/images/portfolio/uploads/' + projects[2] : '/images/portfolio/comingsoon.png'))
							div.tile.is-parent.is-vertical
								article.tile.is-child.port.layout-box
									img(src=(projects[3] != undefined ? '/images/portfolio/uploads/' + projects[3] : '/images/portfolio/comingsoon.png'))
								article.tile.is-child.port.layout-box
									img(src=(projects[4] != undefined ? '/images/portfolio/uploads/' + projects[4] : '/images/portfolio/comingsoon.png'))
	section.hero.testimonials-section.is-fullheight.layout-box.has-ribbon-left
		div.ribbon 
			span.is-medium
				i.fa.fa-commenting-o
		.hero-body
			div.container.has-text-centered
				h1.title.is-2 #[span]estimonials
				if testimonials
					each testimonial, i in testimonials
						div.columns
							div.column.is-8.is-offset-2
								div.box.has-ribbon-left
									div.ribbon 
										span.is-medium
											i.fa.fa-quote-left
									figure.image.is-96x96
									p.subtitle.testimonial
										q=testimonial.text
									p.subtitle.is-6 
										b=testimonial.author
										| 
										br
										|
										small=testimonial.job + ", " + testimonial.firm 
	section.hero.blog-section.is-fullheight.layout-box.has-ribbon-left
		div.ribbon 
			span.is-medium
				i.fa.fa-book
		.hero-body
			div.container
				h1.title.is-2 #[span]atest posts
				div.columns
					div.column.is-5.is-offset-1
						div.card
							div.card-image
								figure.image.is-2by1.post-1
							div.card-content
								div.media
									div.media-left
										figure.image.is-48x48.profile
									div.media-content

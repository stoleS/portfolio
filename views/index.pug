extends layout

block content
	section.hero.landing.is-fullheight.layout-box.has-ribbon-left
		div.ribbon 
			span.is-medium
				i.fa.fa-user
		div.hero-body
			div.container
				div.columns
					div.column
						p.subtitle.is-4#hello 
							span Hello world!
						br
						h1.title.is-1 Hi, my name is
							br
							|	#[span Predrag]
						br
						p.subtitle.is-3 I'm a web developer, 
							br
							| so let's build something 
							br
							| great together!
		a.is-large.icon-down
			span.icon.is-large
				i.fa.fa-angle-double-down
					div.column.person
	section.hero.about-section.is-fullheight.layout-box.has-ribbon-left
		div.ribbon 
			span.is-medium
				i.fa.fa-id-card-o
		.hero-body
			div.container
				h1.title.is-2 #[span]bout
				div.columns.is-desktop.about-text
					div.column.is-half.is-offset-one-quarter
						p.subtitle.is-6#me Hi, my name is Predrag. I'm web developer from Serbia. Programming is my passion and something that inspires me. I graduated High School, department related to Computer Science, and I'm currently student at Higher Medical and Business-Technological School of Applied Studies. Some of my other passions are cars, gym, traveling...
						div.about-buttons
							button.button.is-primary.is-outlined My Resume
							button.button.is-primary Hire Me
	section.hero.about-section.is-fullheight.layout-box.has-ribbon-left
		div.ribbon 
			span.is-medium
				i.fa.fa-list
		.hero-body
			.container
				.columns
					div.column.is-half.is-offset-one-quarter.about-skills

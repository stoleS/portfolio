							div.level-item.has-text-centered
								div
									p
										a.icon.is-medium
											i.fa.fa-twitter
							div.level-item.has-text-centered
								div
									p
										a.icon.is-medium
											i.fa.fa-dropbox
	div.has-text-centered.footer-text
		p 

	footer.footer.footer-section(style="padding-bottom: 48px").hero.is-fullheight.layout-box.has-ribbon-left
		div.ribbon 
			span.is-medium
				i.fa.fa-address-card-o
		.hero-body
			div.container
				div.content.has-text-centered(style="margin-bottom: 48px")
					h1.title.is-2 #[span]et in touch
					p Feel free to ask anything.
				div.columns
					div.column.is-half.is-offset-one-quarter(style="margin-bottom: 36px").contact-form
						form(method='post', action='admin/messages', enctype='application/x-www-form-urlencoded')
							div.field
								p.control
									input.input(type='text' placeholder='Name' name='name' required)
							div.field
								p.control
									input.input(type='email' placeholder='Email' name='email' required)
							div.field
								p.control
									textarea.textarea(placeholder='Enter Message' name='message')
							div.level
								div.level-left
									div.level-item
								div.level-right
									div.level-item
										button.button.is-primary(type='submit') Submit
				div.columns
					div.column.is-4.is-offset-4
						nav.level
							div.level-item.has-text-centered
								div
									p
										a.icon.is-medium
											i.fa.fa-github
							div.level-item.has-text-centered
								div
									p
										a.icon.is-medium
											i.fa.fa-facebook
							div.level-item.has-text-centered
